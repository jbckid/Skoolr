<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Hash</th>
    <th>Salt</th>
    <th>Task ownership</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.hash %></td>
    <td><%= user.salt %></td>
    <td><%= user.task_ownership_id %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

