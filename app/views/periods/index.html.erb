<h1>Listing periods</h1>

<table>
  <tr>
    <th>Class name</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Order</th>
    <th>Schedule</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @periods.each do |period| %>
  <tr>
    <td><%= period.class_name %></td>
    <td><%= period.start_time %></td>
    <td><%= period.end_time %></td>
    <td><%= period.order %></td>
    <td><%= period.schedule_id %></td>
    <td><%= link_to 'Show', period %></td>
    <td><%= link_to 'Edit', edit_period_path(period) %></td>
    <td><%= link_to 'Destroy', period, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

